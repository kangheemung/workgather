<div class="review-content">
 <% if current_planner%>
<%= current_planner.user_name %>様が投稿したworkshop!
 <div class="review-title"><span><%=@workshop.w_title%><p>Workshop詳細ページ！</p></span></div>
<%end%>
<% if current_user%>
  <div class="review-title"><span><%=@workshop.w_title%><p>レビューページ！</p></span></div>
<%end%>
    <p> <%=image_tag @workshop.image.url, size: '300x300'%>  
    <div class="average-score">
      <div class="star-rating">
        <div class="star-rating-front" style="width:<%= @workshop.review_score_percentage %>%"> ★★★★★</div>
        <div class="star-rating-back">★★★★★</div>
      </div>
      <div class="average-score-display">
       <p>  <%= @workshop.avg_score %>点（<%= @workshop.posts.count %>件のレビュー）</p>
      </div>
    </div>
    <%link_to"ワークショップ詳細内容編集",workshops_edit_path(@workshop.id)%>
  </div>
    <% if current_user%>
      <%= render 'workshops/form', post: @post, workshop: @workshop %>
    <%end%>
      <% if current_planner%>
          <div class="workshop_detail">
            <p><%= @workshop.prefecture %></p>
            <p><%= @workshop.address1%> </p>
            <p><%= @workshop.address2%> </p>
            <p><%= @workshop.w_detail%> </p>
            <p><%= @workshop.time%> </p>
            <p><%= @workshop.personnel%> </p>
            <p><%= @workshop.precautions%> </p>
          </div>  
      <% end %>
     <% @workshop.posts.each do |post| %>
       <div class="reviews">
          <div class="reviews_box_image">
            <%=image_tag post.image.url, size: '200x200' %>
            <p><%= post.score%> 点</p>
          </div>
          <div class= "reviews_box_text">
            <div class= "reviews_box_text1">
             <span>タイトル：<%= post.title%></span>
            </div> 
            <div class= "reviews_box_content">
              <p>コメント<%= post.content%></p>
            </div>   
          </div> 
       </div>
     <%end%>
   
      <div class="s_b"><p><%=link_to "workshopの内容を編集する。",workshops_edit_path(@workshop), class: "review_check"%></p></div>
    <div class="s_b"><p><%=link_to "他のworkshopを見る",workshops_index_path(@workshop), class: "review_check"%></p></div>
</div>