<div class= "asobinagara">
  <h1>ASOBINAGARA</h1>
</div>
<div class="signup">
    <div class="singup_title">
        <span>Sign-in with email</span>
    </div>
    <div class="body">
        <%= form_for :planner, url: planners_login_create_path do |f| %>
          <p><%= f.label :email%></p>
          <div class="body_box">
            <%= f.text_field :email, :placeholder => "email" %><br>
          </div>
          <p><%= f.label :password %></p>
          <div class="body_box">
            <%= f.password_field :password, :placeholder => "password" %><br>
          </div>
          <div class="body_box">
                <%= f.submit :Login , class: 'button'%>
          </div>
        <% end %>
    </div>
</div>
<div class= "hand_content">   
       <img class="hand_img" src="/login_head.png">
    </div>


