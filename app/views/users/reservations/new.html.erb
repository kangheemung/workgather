<!-- new.html.erb -->
<div class="container">
  <div class="row">
    <div class="col-12 text-center title">
      <h1>新規予約画面</h1>
    </div>
    <%=@workshop.w_title%>
    <div class="col-12 mt-3 content">
      <%= form_for :reservation, url: users_reservations_create_path(@reservation) do |f| %>
      <div class="day form-group">
        <%= f.label :day, '日付' %>
        <%= f.text_field :day%>
      </div>
      <div class="time form-group">
        <%= f.label :time, '時間' %>
        <%= f.text_field :time%>
      </div>
      <%= f.hidden_field :user_id, value: current_user.id %>
      <%= f.hidden_field :start_time %>
      <%= f.hidden_field :workshop_id value: workshop_id%>
      <div class="submit">
        <%= f.submit value: '予約する', class: 'btn btn-primary mx-auto d-block' %>
      </div>
    <% end %>
    <div class="col-12 text-right">
      <%= link_to '戻る', users_reservations_index_path %>
    </div>
    </div>
  </div>
</div>