<h1>Users::Reservations#new</h1>
<p>Find me in app/views/users/reservations/new.html.erb</p>
<!-- new.html.erb -->
<div class="container">
  <div class="row">
    <div class="col-12 text-center title">
      <h1>新規予約画面</h1>
    </div>
    <div class="col-12 mt-3 content">
      <%= form_for @reservation ,url: users_reservations_create_path(:workshop_id) do |f| %>
        <div class="day form-group">
          <%= f.label :day, '日付' %>
          <%= f.text_field :day, class: 'form-control'%>
        </div>
        <div class="time form-group">
          <%= f.label :time, '時間' %>
          <%= f.text_field :time, class: 'form-control' %>
        </div>
         <%= f.hidden_field :user_id, value: current_user.id %>
          <%= f.hidden_field :workshop_id%>
        <div class="submit">
          <%= f.submit value: '予約する', class: 'btn btn-primary mx-auto d-block' %>
        </div>
      <% end %>
    </div> 
    <div class="col-12 text-right">
      <%= link_to '戻る', users_reservations_index_path %>
    </div>
  </div>
</div>