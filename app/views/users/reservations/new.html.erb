<!-- new.html.erb -->
<div class="container">
  <div class="row">
    <div class="col-12 text-center title">
      <h1>予約ページ</h1>
    </div>
    <%if @workshop.joined?(current_user)%>
    すでに予約しております。
    <%else%>
    予約してみましょう！
     <div class="col-12 mt-3 content">
      <%= form_for :reservation, url: users_reservations_create_path do |f| %>
        <%= f.hidden_field :workshop_id, value: @workshop.id %>
          <div class="day form-group">
            <%= f.label :name, '名前' %>
            <%= f.text_field :name%>
          </div>
          <div class="time form-group">
            <%= f.label :date_time_1, '参加希望日1' %>
            <%= f.datetime_select :date_time_1%>
          </div>
          <div class="time form-group">
            <%= f.label :date_time_2, '参加希望日2' %>
            <%= f.datetime_select :date_time_1%>
          </div>
          <div class="time form-group">
            <%= f.label :date_time_3, '参加希望日3' %>
            <%= f.datetime_select :date_time_3%>
          </div>
          <div class="time form-group">
            <%= f.label :participant, '参加する人数' %>
            <%= f.text_field :participant%>
          </div>
          <div class="time form-group">
            <%= f.label :check_box, 'コロナ対策に同意します。' %>
            <%= f.check_box :check_box%>
          </div>
          <div class="submit">
            <%= f.submit value: '予約する', class: 'btn btn-primary mx-auto d-block' %>
          </div>
      <% end %>
    <% end %>
    <div class="col-12 text-right">
      <%= link_to '戻る', users_reservations_index_path %>
    </div>
    </div>
  </div>
</div>