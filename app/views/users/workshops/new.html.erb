        <% @posts.each do|post| %>
          <div class="p_s_body">
            <p><%=image_tag post.image.url, size: '200x200' %></p>
            <p><%= post.title %></p>
            <p><%=post.content%></p>
          </div>  
          <div class= "p_t_h"> 
            <%if current_user%>
              <p><%=link_to "編集","/posts/#{@post.id}/edit",class: "link_text"%></p>
            <%end%>
          </div>
            <hr>
        <% end %>
  </div>
</div>

  
    

