<div class="p_body">
  <div class="p_title">
    <%= link_to "レビューを書く！",posts_create_path,class: "link_text"%></span>
  </div>       
  <div class="star-rating mb-2">
    <div class="star-rating-front" style="width: %">★★★★★</div>
      <div class="star-rating-back">★★★★★/5</div>
