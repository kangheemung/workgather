<div class="p_body">
    <% @workshops.each do |workshop| %>
        <div class="p_table_left">
            <div class="p_title">
                <span><%= workshop.w_title%></span>
            </div>
            <div class="p_theme">
            <span><%= workshop.w_theme%></span>
            </div>
            <div class="p_img">
                <p> <%= image_tag workshop.image.url, size: '350x350'%>  
            </div>
             <div class="card mb-6">
            <header class="card-header">
              <p class="card-header-title">
              
              </p>
            </header>
            <div class="card-content">
              <div class="content">
                <div class="content average-score">
                  <div class="star-rating mb-2">
                    <div class="star-rating-front" style="width: %">★★★★★</div>
                    <div class="star-rating-back">★★★★★</div>
                    <%@posts.each do|post|%>
                      <p><%=link_to post.title, "/posts/#{post.id}" %>|<%link_to"編集"%></p>
                       <p><%=link_to post.content, "/posts/#{post.id}" %></p>
                    <%end%>
                  </div>
                  <div class="average-score-display ml-3 pt-2">
                  </div>
                </div>
              </div>
            </div>
            <footer class="card-footer">
            </footer>
          </div>   
       </div>
   <%end%>

